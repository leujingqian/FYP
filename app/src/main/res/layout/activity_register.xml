<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Register">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="190dp"
                android:layout_height="174dp"
                android:layout_marginStart="85dp"
                android:layout_marginTop="30dp"

                app:srcCompat="@drawable/logo" />

        </TableRow>

        <TableRow android:layout_height="47dp">

            <TextView
                android:id="@+id/text_view_login"
                android:layout_width="281dp"
                android:layout_height="74dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="72dp"
                android:layout_marginTop="13dp"
                android:gravity="center"
                android:text="Register"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="20dp"/>
        </TableRow>

        <TableRow>

            <EditText
                android:id="@+id/firstname"
                android:layout_width="281dp"
                android:layout_height="74dp"
                android:layout_below="@+id/text_view_login"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="71dp"
                android:layout_marginLeft="71dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/edittextbackground"
                android:ems="10"
                android:hint="First Name"
                android:inputType="textPersonName" />
        </TableRow>

        <TableRow>

            <EditText
                android:id="@+id/lastname"
                android:layout_width="281dp"
                android:layout_height="74dp"
                android:layout_below="@+id/text_view_login"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="71dp"
                android:layout_marginLeft="71dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/edittextbackground"
                android:ems="10"
                android:hint="Last Name"
                android:inputType="textPersonName" />
        </TableRow>
        <TableRow>
         <EditText
        android:id="@+id/register_email"
        android:layout_width="281dp"
        android:layout_height="74dp"
        android:layout_below="@+id/username"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="71dp"
        android:layout_marginLeft="71dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/edittextbackground"
        android:ems="10"
        android:hint="Email"
        android:inputType="text" />
        </TableRow>
        <TableRow>
            <EditText
                android:id="@+id/register_password"
                android:layout_width="281dp"
                android:layout_height="74dp"
                android:layout_below="@+id/register_email"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="71dp"
                android:layout_marginLeft="71dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/edittextbackground"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword" />
        </TableRow>
        <TableRow>
    <EditText
        android:id="@+id/register_password2"
        android:layout_width="281dp"
        android:layout_height="74dp"
        android:layout_below="@+id/register_password"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="74dp"
        android:layout_marginLeft="74dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/edittextbackground"
        android:ems="10"
        android:hint="Confirmed Password"
        android:inputType="textPassword" />
        </TableRow>
        <TableRow>

    <Button
        android:id="@+id/register"
        android:layout_width="281dp"
        android:layout_height="74dp"
        android:layout_below="@+id/register_password2"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="14dp"
        android:background="#000000"
        android:text="Register"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/jumptoLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/register"
                android:layout_alignParentStart="true"
                android:layout_marginStart="85dp"
                android:layout_marginTop="19dp"
                android:layout_marginBottom="50dp"
                android:gravity="center"
                android:text="@string/already_have_account"
                android:textColor="#0000EE"
                android:clickable="true"/>
        </TableRow>
    </TableLayout>
</RelativeLayout>
</ScrollView>