<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.FragmentHostedPlayerReport"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Accuracy %"
            android:gravity="center"/>

        <Button
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:background="@drawable/correctbutton" />

        <TextView
            android:layout_width="59dp"
            android:layout_height="match_parent"
            android:text="Correct"
            android:gravity="center"/>

        <Button
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:background="@drawable/incorrectbutton" />

        <TextView
            android:layout_width="73dp"
            android:layout_height="match_parent"
            android:text="Incorrect"
            android:gravity="center"/>

        <Button
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:background="@drawable/unattemptbutton" />

        <TextView
            android:layout_width="83dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Unattempt" />


    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/playerrresults_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>